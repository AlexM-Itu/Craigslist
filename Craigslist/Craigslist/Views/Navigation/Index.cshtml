@model Craigslist.Models.Navigation.NavigationViewModel
@{
    Layout = null;
}

<div class="dropdown" id="navigation-top-bar" >
    @using (Html.BeginForm("AppySelection", "Navigation"))
    {

        @Html.DropDownListFor(i => i.SelectedCategoty, @Model.Categories, new { @class = "btn btn-default dropdown-toggle", aria_haspopup = "true", aria_expanded = "true", type = "button", id = "menu", data_toggle = "dropdown" })
    
        <button class="btn btn-info glyphicon glyphicon-search" type="submit"></button>
        <button class="btn btn-default" type="button" onclick="window.location = '@Url.Action("ClearSearch")'">Clear Search</button>
    }
 </div>