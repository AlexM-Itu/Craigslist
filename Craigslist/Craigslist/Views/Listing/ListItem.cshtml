@model Craigslist.Domain.Entities.Listing

<div class="list-group">
	<span class="list-group-item">
		@if (@Model.Category.ParentCategory != null)
		{
			@Model.Category.ParentCategory.Name @:->
		}

		@Model.Category.Name
	</span>
	<span class="list-group-item-heading" onclick="window.location='@Url.Action("Detail", new {listingId = @Model.Id})'">@Model.Header</span>
	<span class="badge badge-success">@Model.Price.ToString("c")</span>
</div>