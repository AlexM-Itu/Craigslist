@model Craigslist.Models.Listings.ListingPublishingViewModel
@using (Html.BeginForm("Publish","Listing", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div id="publish-ad-validation-summary">
		@Html.ValidationSummary()
	</div>
	@Html.HiddenFor(i=> i.Listing.Id)
	@Html.HiddenFor(i=> i.Listing.Contact.Id)
    <div class="container">
        <div class="jumbotron" id="add-listing-jumbotron">
            <div id="publish-ad-contact-datails">
                <label align="center">Your Contact Information</label>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(i => i.Listing.Contact.FirstName, new { placeholder = "First Name", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(i => i.Listing.Contact.LastName, new { placeholder = "Last Name", @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @Html.TextBoxFor(i => i.Listing.Contact.Email, new { placeholder = "Email", type = "email", @class = "form-control" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(i => i.Listing.Contact.Phone, new { placeholder = "0000000000", type = "number", min = "0", pattern = @"\d{10}", @class = "form-control", placement = "top", trigger = "manual" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
			                @Html.TextBoxFor(i => i.Listing.Header, new {id = "publish-ad-header", @class = "form-control", placeholder = "Title of a listing"})
		                </div>
	                    <div class="col-md-3">
		                    $@Html.TextBoxFor(i => i.Listing.Price, new {@class = "form-control  ", id = "publish-ad-price", placeholder = "Price", maxlength = "4", min = "0", type = "number"})
	                    </div>
						<div class="col-md-3">
							@Html.DropDownListFor(i => i.Listing.CategoryId, @Model.Categories, new { @class = "form-control", })
						</div>
						<div class="col-md-3">
							<input type="file" name="image" class="form-control" />
						</div>
	                </div>
                </div>
            </div>
        </div>

        <div>
            <div class="form-group">
                <label for="publish-ad-body">Description:</label>
                @Html.TextAreaFor(i => i.Listing.Body, new { id = "publish-ad-body", @class = "form-control", @placeholder = "Add Description" })
            </div>
            <button type="submit" class="btn btn-primary">Publish</button>
        </div>
    </div>
}